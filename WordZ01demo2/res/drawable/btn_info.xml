<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" 
        android:drawable="@drawable/button_info_hover" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
         <solid
          android:color="#343434" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item  android:drawable="@drawable/button_info" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
            <gradient
                android:startColor="#343434"
                android:endColor="#171717"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
